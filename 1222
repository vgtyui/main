#include <iostream>
using namespace std;

....,,,

int main() {
    char op;
    float num1, num2;

    cout << "Введите  операцию (+, -, *, /): ";
    cin >> op;

    cout << "Введите два числа: ";
    cin >> num1 >> num2;

    switch(op) {
        case '+':
            cout << "Результат: " << num1 + num2;
            break;
        case '-':
            cout << "Результат: " << num1 - num2;
            break;
        case '*':
            cout << "Результат: " << num1 * num2;
            break;
        case '/':
            if (num2 == 0) {
                cout << "Ошибка: деление на ноль";
            } else {
                cout << "Результат: " << num1 / num2;
            }
            break;
        default:
            cout << "Ошибка: неверная операция";
            break;
    }

    return 0;
}

